[Unit]
Description=Cockroach database cluster node
Requires=network.target

[Service]
Type=notify
WorkingDirectory={{ HOME_DIR }}
ExecStart={{ COCKROACH_PATH }} start --certs-dir={{ CERTS_DIR }} --store={{ HOME_DIR }}/node --listen-addr={{ WIREGUARD_IP }}:26257 --sql-addr={{ WIREGUARD_IP }}:26258 --http-addr=0.0.0.0:8080 --join={{ HOST_LIST }}
TimeoutStopSec=300
Restart=always
RestartSec=10
SyslogIdentifier=cockroach
User={{ USER }}

[Install]
WantedBy=default.target
